@model IEnumerable<Bookstore.Models.Book>

@{
    ViewData["Title"] = "Books List";
}

<h2>Books List</h2>
<form method="get" asp-action="Index" class="searchForm">
    <input type="text" name="searchTerm" placeholder="Search by title or author..."  class="searchInput" />
    <button type="submit" class="searchBtn">Search</button>
</form>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Author</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model)
        {
            <tr>
                <td>@book.Title</td>
                <td>@book.Author</td>
                <td>
                    <a class="btn btn-primary" asp-action="Details" asp-route-id="@book.Id">View Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a class="btn btn-success" asp-action="CreateBook">Add New Book</a>